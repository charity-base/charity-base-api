{
  "name": "charity-base-api",
  "version": "4.2.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/charity-base/charity-base-api.git"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "bunyan": "^1.8.12",
    "cors": "^2.8.1",
    "elasticsearch": "^15.0.0",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "mongoose": "^5.3.4",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "jest": "^20.0.4"
  },
  "config": {
    "service": "charity-base-api-4.2.0",
    "build": "../charity-base-api-4.2.0.tgz",
    "node_env": "production",
    "port": 8451
  },
  "scripts": {
    "start": "node server.js | ./node_modules/bunyan/bin/bunyan",
    "test": "jest",
    "build-slc": "slc build --npm",
    "create-service": "slc ctl -C http://charitybase.uk create $npm_package_config_service",
    "configure-service": "slc ctl -C http://charitybase.uk env-set $npm_package_config_service NODE_ENV=$npm_package_config_node_env PORT=$npm_package_config_port",
    "predeploy": "npm run create-service && npm run configure-service",
    "deploy": "slc deploy -s $npm_package_config_service http://charitybase.uk $npm_package_config_build"
  }
}
